# Required API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here

# Optional: Web search (get free key at https://app.tavily.com)
# TAVILY_API_KEY=tvly-your_key_here

# Language settings
LANGUAGE_MODE=auto  # "en", "sv", or "auto"

# Memory settings
# MAX_CONVERSATION_TURNS=20        # Number of turns to keep (0 = unlimited)
# INACTIVITY_TIMEOUT_SECONDS=1800  # Clear history after inactivity (1800 = 30 min)

# Audio settings
# SILENCE_THRESHOLD_SECONDS=1.5    # Silence duration to detect end of speech
# WHISPER_MODEL=base               # STT model: tiny, base, small, medium, large-v3

# LLM settings
# GEMINI_MODEL=gemini-3-flash-preview  # Model to use

# Future (not yet implemented)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# POSTGRES_URL=postgresql://localhost/voicechat
